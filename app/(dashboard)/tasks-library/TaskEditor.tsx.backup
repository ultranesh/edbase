'use client';

import { useState, useEffect } from 'react';

interface Task {
  id: string;
  questionText: string;
  questionImage: string | null;
  answerText: string | null;
  answerImage: string | null;
  solutionText: string | null;
  solutionImage: string | null;
  format: string;
  difficultyLevel: string;
  points: number;
  timeEstimate: number | null;
  hints: string[];
  tags: string[];
  subtopic: {
    id: string;
    name: string;
    topic: {
      id: string;
      name: string;
      subject: {
        id: string;
        name: string;
      };
    };
  };
}

interface Subject {
  id: string;
  name: string;
  icon: string | null;
  taskTopics: {
    id: string;
    name: string;
    icon: string | null;
    subtopics: {
      id: string;
      name: string;
    }[];
  }[];
}

interface TaskEditorProps {
  task: Task | null;
  subjects: Subject[];
  onClose: () => void;
}

export default function TaskEditor({ task, subjects, onClose }: TaskEditorProps) {
  const [saving, setSaving] = useState(false);
  const [selectedSubject, setSelectedSubject] = useState('');
  const [selectedTopic, setSelectedTopic] = useState('');

  const [formData, setFormData] = useState({
    subtopicId: '',
    format: 'NISH',
    difficultyLevel: 'INTERMEDIATE',
    questionText: '',
    questionImage: '',
    answerText: '',
    answerImage: '',
    solutionText: '',
    solutionImage: '',
    hints: [''],
    tags: [],
    points: 1,
    timeEstimate: null as number | null,
  });

  useEffect(() => {
    if (task) {
      setFormData({
        subtopicId: task.subtopic.id,
        format: task.format,
        difficultyLevel: task.difficultyLevel,
        questionText: task.questionText,
        questionImage: task.questionImage || '',
        answerText: task.answerText || '',
        answerImage: task.answerImage || '',
        solutionText: task.solutionText || '',
        solutionImage: task.solutionImage || '',
        hints: task.hints.length > 0 ? task.hints : [''],
        tags: task.tags,
        points: task.points,
        timeEstimate: task.timeEstimate,
      });
      setSelectedSubject(task.subtopic.topic.subject.id);
      setSelectedTopic(task.subtopic.topic.id);
    }
  }, [task]);

  const selectedSubjectData = subjects.find(s => s.id === selectedSubject);
  const selectedTopicData = selectedSubjectData?.taskTopics.find(t => t.id === selectedTopic);

  const handleSave = async () => {
    if (!formData.subtopicId || !formData.questionText) {
      alert('Пожалуйста, заполните обязательные поля (подтема и текст вопроса)');
      return;
    }

    setSaving(true);
    try {
      const payload = {
        ...formData,
        hints: formData.hints.filter(h => h.trim() !== ''),
      };

      const url = task ? `/api/tasks/${task.id}` : '/api/tasks';
      const method = task ? 'PATCH' : 'POST';

      const response = await fetch(url, {
        method,
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload),
      });

      if (!response.ok) {
        throw new Error('Failed to save task');
      }

      onClose();
    } catch (error) {
      console.error('Save error:', error);
      alert('Ошибка при сохранении задачи');
    } finally {
      setSaving(false);
    }
  };

  const handleDelete = async () => {
    if (!task || !confirm('Вы уверены, что хотите удалить эту задачу?')) {
      return;
    }

    try {
      const response = await fetch(`/api/tasks/${task.id}`, {
        method: 'DELETE',
      });

      if (!response.ok) {
        throw new Error('Failed to delete task');
      }

      onClose();
    } catch (error) {
      console.error('Delete error:', error);
      alert('Ошибка при удалении задачи');
    }
  };

  const insertLatex = (field: 'questionText' | 'answerText' | 'solutionText', sample: string) => {
    const textarea = document.getElementById(field) as HTMLTextAreaElement;
    if (!textarea) return;

    const start = textarea.selectionStart;
    const end = textarea.selectionEnd;
    const text = formData[field];
    const before = text.substring(0, start);
    const after = text.substring(end);

    setFormData({
      ...formData,
      [field]: before + sample + after,
    });

    // Set cursor position after inserted text
    setTimeout(() => {
      textarea.focus();
      textarea.setSelectionRange(start + sample.length, start + sample.length);
    }, 0);
  };

  const latexSamples = [
    { label: 'Дробь', latex: '\\frac{a}{b}' },
    { label: 'Степень', latex: 'x^{2}' },
    { label: 'Корень', latex: '\\sqrt{x}' },
    { label: 'Сумма', latex: '\\sum_{i=1}^{n}' },
    { label: 'Интеграл', latex: '\\int_{a}^{b}' },
    { label: 'Предел', latex: '\\lim_{x \\to \\infty}' },
  ];

  return (
    <div className="max-w-4xl mx-auto">
      <div className="bg-white rounded-lg border border-gray-200 p-6">
        <div className="flex justify-between items-center mb-6">
          <h2 className="text-xl font-semibold text-gray-900">
            {task ? 'Редактировать задачу' : 'Новая задача'}
          </h2>
          <button
            onClick={onClose}
            className="text-gray-500 hover:text-gray-700"
          >
            <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div className="space-y-6">
          {/* Subject, Topic, Subtopic Selection */}
          <div className="grid grid-cols-3 gap-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Предмет <span className="text-red-500">*</span>
              </label>
              <select
                value={selectedSubject}
                onChange={(e) => {
                  setSelectedSubject(e.target.value);
                  setSelectedTopic('');
                  setFormData({ ...formData, subtopicId: '' });
                }}
                className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 placeholder:text-gray-500 text-gray-900"
              >
                <option value="">Выберите предмет</option>
                {subjects.map((subject) => (
                  <option key={subject.id} value={subject.id}>
                    {subject.icon} {subject.name}
                  </option>
                ))}
              </select>
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Тема <span className="text-red-500">*</span>
              </label>
              <select
                value={selectedTopic}
                onChange={(e) => {
                  setSelectedTopic(e.target.value);
                  setFormData({ ...formData, subtopicId: '' });
                }}
                disabled={!selectedSubjectData}
                className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 disabled:bg-gray-100 text-gray-900"
              >
                <option value="">Выберите тему</option>
                {selectedSubjectData?.taskTopics.map((topic) => (
                  <option key={topic.id} value={topic.id}>
                    {topic.icon} {topic.name}
                  </option>
                ))}
              </select>
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Подтема <span className="text-red-500">*</span>
              </label>
              <select
                value={formData.subtopicId}
                onChange={(e) => setFormData({ ...formData, subtopicId: e.target.value })}
                disabled={!selectedTopicData}
                className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 disabled:bg-gray-100 text-gray-900"
              >
                <option value="">Выберите подтему</option>
                {selectedTopicData?.subtopics.map((subtopic) => (
                  <option key={subtopic.id} value={subtopic.id}>
                    {subtopic.name}
                  </option>
                ))}
              </select>
            </div>
          </div>

          {/* Format, Difficulty, Points, Time */}
          <div className="grid grid-cols-4 gap-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Формат <span className="text-red-500">*</span>
              </label>
              <select
                value={formData.format}
                onChange={(e) => setFormData({ ...formData, format: e.target.value })}
                className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 placeholder:text-gray-500 text-gray-900"
              >
                <option value="NISH">НИШ</option>
                <option value="BIL">БИЛ</option>
                <option value="RFMSH">РФМШ</option>
                <option value="ENT">ЕНТ</option>
                <option value="OLYMPIAD">Олимпиадная</option>
                <option value="SAT">SAT</option>
              </select>
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Сложность <span className="text-red-500">*</span>
              </label>
              <select
                value={formData.difficultyLevel}
                onChange={(e) => setFormData({ ...formData, difficultyLevel: e.target.value })}
                className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 placeholder:text-gray-500 text-gray-900"
              >
                <option value="BEGINNER">Начинающий</option>
                <option value="ELEMENTARY">Элементарный</option>
                <option value="PRE_INTERMEDIATE">Ниже среднего</option>
                <option value="INTERMEDIATE">Средний</option>
                <option value="UPPER_INTERMEDIATE">Выше среднего</option>
                <option value="ADVANCED">Продвинутый</option>
              </select>
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Баллы
              </label>
              <input
                type="number"
                min="1"
                value={formData.points}
                onChange={(e) => setFormData({ ...formData, points: parseInt(e.target.value) || 1 })}
                className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 placeholder:text-gray-500 text-gray-900"
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Время (мин)
              </label>
              <input
                type="number"
                min="1"
                value={formData.timeEstimate || ''}
                onChange={(e) => setFormData({ ...formData, timeEstimate: e.target.value ? parseInt(e.target.value) : null })}
                placeholder="Не указано"
                className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 placeholder:text-gray-500 text-gray-900"
              />
            </div>
          </div>

          {/* Question */}
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">
              Текст вопроса <span className="text-red-500">*</span>
            </label>
            <div className="mb-2 flex flex-wrap gap-2">
              {latexSamples.map((sample) => (
                <button
                  key={sample.label}
                  onClick={() => insertLatex('questionText', sample.latex)}
                  className="px-2 py-1 text-xs bg-gray-100 hover:bg-gray-200 rounded border border-gray-300"
                  type="button"
                >
                  {sample.label}
                </button>
              ))}
            </div>
            <textarea
              id="questionText"
              value={formData.questionText}
              onChange={(e) => setFormData({ ...formData, questionText: e.target.value })}
              rows={6}
              placeholder="Введите текст вопроса. Для математических формул используйте LaTeX синтаксис"
              className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono text-sm placeholder:text-gray-500"
            />
            <p className="mt-1 text-xs text-gray-500">
              Поддерживается LaTeX для формул. Например: {'$x^2 + y^2 = r^2$'} или {'$$\\int_0^\\infty e^{-x} dx$$'}
            </p>
          </div>

          {/* Question Image */}
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">
              URL изображения вопроса (опционально)
            </label>
            <input
              type="url"
              value={formData.questionImage}
              onChange={(e) => setFormData({ ...formData, questionImage: e.target.value })}
              placeholder="https://example.com/image.png"
              className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 placeholder:text-gray-500"
            />
          </div>

          {/* Answer */}
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">
              Ответ (опционально)
            </label>
            <textarea
              id="answerText"
              value={formData.answerText}
              onChange={(e) => setFormData({ ...formData, answerText: e.target.value })}
              rows={3}
              placeholder="Правильный ответ"
              className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono text-sm placeholder:text-gray-500"
            />
          </div>

          {/* Solution */}
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">
              Решение (опционально)
            </label>
            <textarea
              id="solutionText"
              value={formData.solutionText}
              onChange={(e) => setFormData({ ...formData, solutionText: e.target.value })}
              rows={6}
              placeholder="Пошаговое решение задачи"
              className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono text-sm placeholder:text-gray-500"
            />
          </div>

          {/* Hints */}
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-2">
              Подсказки (опционально)
            </label>
            {formData.hints.map((hint, index) => (
              <div key={index} className="flex gap-2 mb-2">
                <input
                  type="text"
                  value={hint}
                  onChange={(e) => {
                    const newHints = [...formData.hints];
                    newHints[index] = e.target.value;
                    setFormData({ ...formData, hints: newHints });
                  }}
                  placeholder={`Подсказка ${index + 1}`}
                  className="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                />
                {formData.hints.length > 1 && (
                  <button
                    onClick={() => {
                      const newHints = formData.hints.filter((_, i) => i !== index);
                      setFormData({ ...formData, hints: newHints });
                    }}
                    className="px-3 py-2 text-red-600 hover:bg-red-50 rounded-lg"
                    type="button"
                  >
                    Удалить
                  </button>
                )}
              </div>
            ))}
            <button
              onClick={() => setFormData({ ...formData, hints: [...formData.hints, ''] })}
              className="text-sm text-blue-600 hover:text-blue-700"
              type="button"
            >
              + Добавить подсказку
            </button>
          </div>

          {/* Actions */}
          <div className="flex justify-between items-center pt-6 border-t border-gray-200">
            <div>
              {task && (
                <button
                  onClick={handleDelete}
                  className="px-4 py-2 text-red-600 hover:bg-red-50 rounded-lg font-medium"
                  type="button"
                >
                  Удалить задачу
                </button>
              )}
            </div>
            <div className="flex gap-3">
              <button
                onClick={onClose}
                className="px-4 py-2 border border-gray-300 rounded-lg font-medium text-gray-700 hover:bg-gray-50"
                type="button"
              >
                Отмена
              </button>
              <button
                onClick={handleSave}
                disabled={saving}
                className="px-4 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 disabled:opacity-50"
                type="button"
              >
                {saving ? 'Сохранение...' : 'Сохранить'}
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
}
